                  span(style='display:inline-block; vertical-align:middle; margin:29px 0 26px; border-bottom:1px solid #cecece; width:100px;')
                  p(style='color:#455056; font-size:15px;line-height:24px; margin:0;') #{bodyMessage}
                  a(href=actionLink style='background:#20e277;text-decoration:none !important; font-weight:500; margin-top:35px; color:#fff;text-transform:uppercase; font-size:14px;padding:10px 24px;display:inline-block;border-radius:50px;') #{buttonName}
